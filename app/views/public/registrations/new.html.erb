<div class='container'>
  <h4>新規登録</h4>
    <div class="row">
      <div class="col-md-4 col-lg-10">
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          
          <div class="row mb-3">
            <label class="col-sm-3 col-form-label">姓</label>
            <%= f.text_field :last_name %>
          </div>
          
          <div class="row mb-3">
            <label class="col-sm-3 col-form-label">名</label>
            <%= f.text_field :first_name %>
          </div>
          
          <div class="row mb-3">
            <label class="col-sm-3 col-form-label">ニックネーム</label>
            <%= f.text_field :nickname %>
          </div>
          
          <div class="row mb-3">
            <label class="col-sm-3 col-form-label">ログインID</label>
            <%= f.text_field :login_id %>
          </div>
        
          <div class="row mb-3">
            <label class="col-sm-3 col-form-label">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="row mb-3">
            <label class="col-sm-3 col-form-label">パスワード(6文字以上)</label>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        
          <div class="row mb-3">
            <label class="col-sm-3 col-form-label">パスワード確認</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        
          <div class="row">
            <div class="col-3">
              <%= link_to 'トップへ戻る', root_path, class:"btn btn-secondary" %>
            </div>
            <div class="col-6">
              <%= f.submit "会員登録", class: 'btn btn-secondary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>