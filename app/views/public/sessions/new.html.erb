<%= notice %>
<%= alert %>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">ログイン</h5>
       <div class="form-body p-4">
        <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="far fa-user-circle"></i></span>
          </div>
          <%= f.text_field :login_id, autofocus: true, autocomplete: "login_id", placeholder: "ログインID", class: "form-control" %>
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-unlock-alt"></i></span>
          </div>
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
        </div>
          <%= f.submit "ログイン", class:"btn btn-md btn-block btn-secondary mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to 'トップへ戻る', root_path, class:"btn btn-secondary" %>
</div>