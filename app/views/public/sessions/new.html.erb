<%= flash[:notice] %>
<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field">
    <%= f.label 'ログインID' %><br />
    <%= f.text_field :login_id, autofocus: true, autocomplete: "login_id" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード' %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
