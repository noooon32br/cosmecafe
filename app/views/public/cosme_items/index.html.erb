<h1>投稿一覧</h1>

<%= link_to '新規投稿', new_cosme_item_path %>

<% @cosmeitems.each do |cosmeitem| %>

  <p>コスメ名</p>
  <span><%= cosmeitem.cosme_name %></span>
  
  <%= link_to '詳細', cosme_item_path(cosmeitem.id) %>
  
  <br />
  <% if cosmeitem.image.attached? %>
    <%= image_tag cosmeitem.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

<% end %>