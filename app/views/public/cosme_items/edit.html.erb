<h1>編集</h1>

<%= form_with model: @cosmeitem, url: cosme_item_path(@cosmeitem.id), method: :patch do |f| %>

  <h4>コスメ名</h4>
  <%= f.text_field :cosme_name %>
  
  <h4>コスメ内容</h4>
  <%= f.text_area :description %>
  
  <h4>画像</h4>
  <%= f.label :image %>
  <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
  
  <%= f.submit '保存' %>
  

<% end %>