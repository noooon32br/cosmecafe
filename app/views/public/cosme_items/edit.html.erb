<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4>編集</h4>
      <%= form_with model: @cosmeitem, url: cosme_item_path(@cosmeitem.id), method: :patch do |f| %>
      <div class="form-group">
        <label>コスメ名</label><br>
        <%= f.text_field :cosme_name %>
      </div>
      <div class="form-group">
        <label>コスメ内容</label><br>
        <%= f.text_area :description, size: "60x5" %>
      </div>
      <div class="form-group">
        <label>画像</label>
        <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.submit '保存', class: "btn btn-secondary" %>
      </div>  
      <% end %>
    </div>
  </div>
</div>