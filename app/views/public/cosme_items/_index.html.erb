 <% cosmeitems.each do |cosmeitem| %>
  <%= link_to cosme_item_path(cosmeitem.id) do %> 
    <% if cosmeitem.image.attached? %>
      <%= image_tag cosmeitem.image, size: "200x200", class:"card-img-top" %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
  <% end %>
    <div class="card-body">
      <p class="card-title">
        <%= cosmeitem.cosme_name %>
      </p>
      <p class="card-text">
       <%= cosmeitem.description.truncate(13) %>
      </p>
      <span>
        <small class="text-muted">
          <%= render_with_hashtags(cosmeitem.hashbody) %>
        </small>
      </span><br>
      <p>
        <small class="text-muted">
        <%= link_to user_path(cosmeitem.user.id) do %>
          <%= cosmeitem.user.nickname %> 
        <% end %>
        </small>
      </p>
    </div>
 <% end %>
 
 <%= paginate cosmeitems %>