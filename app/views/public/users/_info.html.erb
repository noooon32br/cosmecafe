  <div class="card text-center mx-auto mt-4 shadow-lg"">
    <%= image_tag user.get_profile_image(50,50), class:"mt-2 rounded-circle" %>
      <%= user.nickname %>
      <%= user.introduction %>
      <p class="">フォロー
        <%= link_to user.followings.count, user_followings_path(user.id) %></p>
    <p>フォロワー
     <%= link_to user.followers.count, user_followers_path(user.id) %></p>
  
  <% if user == current_user %>
    <%= link_to 'プロフィール編集', edit_user_path(user.id), class: "btn btn-secondary btn-block w-2" %>
    <%= link_to 'お気に入り一覧',  user_bookmarks_path(user), class: "btn btn-secondary" %>
  <% else %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info btn-sm btn-block" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success btn-sm btn-block" %>
    <% end %>
  <% end %>

</div>