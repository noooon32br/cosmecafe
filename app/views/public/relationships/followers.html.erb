<h3>フォロワー一覧</h3>
 <% if @users.exists? %>
      <% @users.each do |user| %>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.nickname %></td>
      <td>フォロワー数: <%= user.followers.count %></td>
      <td><%= link_to 'Show', user %></td>
      <% end %>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
    </tr>
  </tbody>
</table>