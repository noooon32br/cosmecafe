<% if Bookmark.exists?(user_id: current_user.id, cosme_item_id: cosme_item.id) %>
  <%= link_to cosme_item_bookmarks_path(cosme_item.id), remote: true, method: :delete do %>
    <i class="fas fa-heart"></i>
    <%= cosme_item.bookmarks.count %>
  <% end %>
<% else %>
  <%= link_to cosme_item_bookmarks_path(cosme_item.id), remote: true, method: :post do %>
    <i class="far fa-heart"></i>
    <%= cosme_item.bookmarks.count %>
  <% end %>
<% end %>