<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">cosme cafe</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? && current_user.login_id == 'guestuser' %>
            <li class="navbar-item">
              <%= link_to 'ログアウト', destroy_user_session_path(), method: :delete, class: 'btn btn-secondary' %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="navbar-item">
              <%= link_to '投稿一覧', admin_homes_top_path(), class: 'btn btn-secondary' %>
            </li>
            <li class="navbar-item">
              <%= link_to 'ログアウト', destroy_admin_session_path(), method: :delete, class: 'btn btn-secondary' %>
            </li>
          <% elsif user_signed_in? %>
            <li class="navbar-item">
              <%= link_to 'マイページ', user_path(current_user), class: 'btn btn-secondary' %>
            </li>
            <li class="navbar-item">
              <%= link_to '投稿一覧', cosme_items_path(), class: 'btn btn-secondary' %>
            </li>
            <li class="navbar-item">
              <%= link_to 'ログアウト', destroy_user_session_path(), method: :delete, class: 'btn btn-secondary' %>
            </li>
            <div class="search_form">
            <%= form_with url: search_path, local: true, method: :get do |f| %>
              <%= f.text_field :word, class: "form-control mr-sm-2", type: "text", placeholder: "Search" %>
              <%= f.select :range, options_for_select([['会員'], ['コスメ名']]) %>
              <button class="btn btn-success" type="button"><i class="fas fa-search"></i></button>
            <% end %>
             </div>
          <% else %>
            <li class="navbar-item">
              <%= link_to 'ログイン', new_user_session_path(), class: 'btn btn-secondary' %>
            </li>
            
            <li class="navbar-item">
              <%= link_to '新規登録', new_user_registration_path(), class: 'btn btn-secondary' %>
            </li>
          
          <% end %>
          </ul>
      </div>
    </div>
    
      
  </nav>

</header>