<div class='container'>
  <h4>会員詳細</h4>
    <div class="row">
      <div class="col-md-4">
        <div><%= @user.last_name %><%= @user.first_name %></div>

        <table class="table table-borderless">
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= @user.last_name %><%= @user.first_name %></td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td><%= @user.nickname %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>ステータス</th>
          <td>
            <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
              <%= f.check_box :is_banned %>
              <%= f.label :is_banned, "利用停止中" %>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to 'back', admin_users_path, class:'btn btn-secondary' %>
    </div>
  </div>
</div>