<div class='container'>
  <div class="row">
    <div class="col-md-4 col-lg-6">
      <div>
        <span class="text-name"><%= @user.last_name %><%= @user.first_name %></span>様の情報
      </div>

      <table class="table table-bordered bg-light">
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>ステータス</th>
        <td>
          <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
          <%= f.radio_button :is_banned, true %>
          <%= f.label :is_banned, "利用停止中", value: true %>
          <%= f.radio_button :is_banned, false %>
          <%= f.label :is_banned, "有効", value: false %>
            <%= f.submit '変更', class:'btn btn-secondary btn-sm', "data-confirm" => "本当に変更しますか？"  %>
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to '戻る', admin_users_path, class:'btn btn-secondary' %>
  </div>
</div>